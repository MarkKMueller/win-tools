<?xml version="1.0" encoding="utf-8"?> 
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Put the win hook in the same directory as the XenGuestAgent -->
    <XenGuestWinHookOutputDir>$(XenGuestAgentOutputDir)</XenGuestWinHookOutputDir>
  </PropertyGroup>
  <PropertyGroup />
  <ItemDefinitionGroup />
  <ItemGroup>
    <BuildMacro Include="XenGuestWinHookOutputDir">
      <Value>$(XenGuestWinHookOutputDir)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>
